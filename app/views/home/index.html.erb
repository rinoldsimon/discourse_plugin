  <%= simple_format link.content %>
  <% break if i == 1 %>
<% end %>

<% @doc2.xpath('//a').each_with_index do |link, i| %>
  <% a=link.content.gsub! /\s+/, '-' %>
  <%= a.to_s.chop %>
  <% break if i == 1 %>
<% end %>

<% @doc2.xpath('//a').each_with_index do |link, i| %>
